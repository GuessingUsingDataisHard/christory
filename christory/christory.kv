#: import NoTransition kivy.uix.screenmanager.NoTransition
ScreenManager:
    transition: NoTransition()
    TitleScreen:
    MainGameScreen:


<TitleScreen>
    name: 'Title'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Christory'
            font_size: '100dp'
            size_hint: 1, 0.6
        Button:
            text: 'New Game'
            size_hint: 1, 0.2
            on_release: app.root.current = 'MainGame'
        Button:
            text: 'Load Game'
            size_hint: 1, 0.2


<MainGameScreen>
    name: 'MainGame'
    BoxLayout:
        orientation: 'vertical'
        StackLayout:
            orientation: 'rl-tb'
            size_hint: 1, 0.1
            Button:
                text: 'Next Turn'
                size_hint: 0.3, 1
            Button:
                text: 'Save Game'
                size_hint: 0.1, 1
            Button:
                text: 'Exit'
                size_hint: 0.1, 1
                on_release: app.root.current = 'Title'
        Label:
            text: 'I am a map placeholder'

        
